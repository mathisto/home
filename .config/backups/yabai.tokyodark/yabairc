source "$HOME/.config/colors/tokyodark.sh" # Loads all defined colors

# load scriptting adittion
sudo yabai --load-sa
yabai -m signal --add event:wdock_did_restart action="sudo yabai --load-sa"

# foucs the hoverd window
yabai -m config focus_follows_mouse autoraise

# external bar
yabai -m config external_bar all:32:0

# turn off some stuff
yabai -m config window_shadow              off
yabai -m config auto_balance               off
yabai -m config mouse_follows_focus        off

# opacity based focus (I don't currently use it)
yabai -m config window_opacity             off
yabai -m config window_opacity_duration    0.0
yabai -m config active_window_opacity      1.0
yabai -m config normal_window_opacity      1.0

# devide windows by 2
yabai -m config split_ratio                0.50

# mouse stuff
yabai -m config mouse_modifier             cmd
yabai -m config mouse_action1              resize
yabai -m config mouse_action2              move

# window border
yabai -m config window_border on
yabai -m config window_border_width 
yabai -m config active_window_border_color $GREEN
yabai -m config normal_window_border_color $RED
yabai -m config insert_feedback_color      $PURPLE

# window gaps
yabai -m config layout                     bsp
yabai -m config top_padding                6
yabai -m config bottom_padding             6
yabai -m config left_padding               6
yabai -m config right_padding              6
yabai -m config window_gap                 6

# don't tile unresizable apps
yabai -m rule --add app="^(Calculator|VLC|System Preferences|zoom.us|Photo Booth|Archive Utility|Python)$" manage=off

# label spaces
yabai -m space 1 --label ﬦ
yabai -m space 2 --label 
yabai -m space 3 --label 
yabai -m space 4 --label ﮟ
yabai -m space 5 --label 
yabai -m space 6 --label 
yabai -m space 7 --label ﬤ
yabai -m space 8 --label 
#notify sketchybar when window focus is changed
yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"
yabai -m signal --add event=window_title_changed action="sketchybar --trigger title_change"

# notify when the yabai config finished loading
echo "yabai configuration loaded..."
