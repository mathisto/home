#                          ﱦ 齃     ﮂ  ﵁ 爵        ﭵ     ﱦ  ﰊ 異 ﴱ אַ  'Y⃣'

source "$HOME/.config/colors/tokyodark.sh" # Loads all defined colors

############## BAR ##############
sketchybar --bar height=42 \
                 y_offset=0 \
                 blur_radius=0 \
                 position=top \
                 padding_left=0 \
                 padding_right=0 \
                 margin=0 \
                 corner_radius=0 \
                 color=$BLACK \
                 shadow=on

############## GLOBAL DEFAULTS ##############
sketchybar --default updates=when_shown \
                     icon.font="Liga SFMono Nerd Font:Regular:16.0" \
                     icon.color=$WHITE \
                     icon.highlight_color=$RED \
                     label.font="Montserrat Alternates:ExtraBold:16.0" \
                     label.color=$WHITE \
                     background.corner_radius=0 \
                     background.height=30

sketchybar --add item logo left \
           --set logo icon= \
                 icon.color=$BLACK \
                 icon.padding_left=16 \
                 icon.padding_right=16 \
                 background.color=$PURPLE \
                 background.padding_right=8 \
                 background.padding_left=4 \
                 click_script="sketchybar --update"

SPACE_ICONS=("1" "2" "3" "4" "5")
SPACES=()

for i in "${!SPACE_ICONS[@]}"
do
  sid=$(($i+1))
  SPACES+=(space.$sid)
  sketchybar --add space space.$sid left \
             --set space.$sid associated_space=$sid \
                              icon=${SPACE_ICONS[i]} \
                              icon.padding_left=20 \
                              icon.padding_right=20 \
                              icon.highlight_color=$RED \
                              background.padding_left=-4 \
                              background.padding_right=-4 \
                              background.color=$BLACK \
                              background.drawing=on \
                              label.drawing=off \
                              click_script="yabai -m space --focus $sid"
done

sketchybar --add item space_separator left \
           --set space_separator icon= \
                                 background.padding_left=23 \
                                 background.padding_right=23 \
                                 label.drawing=off \
                                 icon.color=$RED

sketchybar --add item window_title left \
           --set window_title    script="~/.config/sketchybar/plugins/window_title.sh" \
                                 icon.drawing=off \
                                 label.color=$PURPLE \
           --subscribe window_title front_app_switched

############## ITEM DEFAULTS ###############
sketchybar --default label.padding_left=6 \
                     label.padding_right=6 \
                     icon.padding_left=6 \
                     icon.padding_right=6 \
                     icon.font="Liga SFMono Nerd Font:Regular:16.0" \
                     background.height=30 \
                     background.padding_right=4 \
                     background.padding_left=4 \
                     background.corner_radius=0

sketchybar --add item spot_logo center \
           --set spot_logo icon= \
                           label.drawing=off \
                           icon.color=$BLACK \
                           background.color=0xffEDC4E5


sketchybar --add item spot center \
           --set spot update_freq=1 \
                      icon.drawing=off \
                      updates=on \
                      script="~/.config/sketchybar/plugins/spotifyIndicator.sh" \
                      background.color=$BLACK \
                      background.padding_left=0

############## RIGHT ITEMS ##############
sketchybar --add item time right \
           --set time update_freq=1 \
                      icon.drawing=off \
                      script="~/.config/sketchybar/plugins/time.sh" \
                      background.color=$BLACK \
                      background.padding_left=0

sketchybar --add item time_logo right\
           --set time_logo icon= \
                           label.drawing=off \
                           icon.color=$BLACK \
                           label.drawing=off \
                           background.color=$ORANGE

sketchybar --add item date right \
           --set date update_freq=1000 \
                      icon.drawing=off \
                      script="~/.config/sketchybar/plugins/date.sh" \
                      background.color=$BLACK \
                      background.padding_left=0

sketchybar --add item clock_logo right\
           --set clock_logo icon= \
                            icon.color=$BLACK\
                            label.drawing=off \
                            background.color=$BLUE

sketchybar --add item battery right \
           --set battery update_freq=3 \
                         icon.drawing=off \
                         script="~/.config/sketchybar/plugins/power.sh" \
                         background.color=$BLACK \
                         background.padding_left=0

sketchybar --add item power_logo right \
           --set power_logo icon= \
                 icon.color=$BLACK \
                 label.drawing=off \
                 background.color=$GREEN

sketchybar --add item net right \
           --set net script="~/.config/sketchybar/plugins/net.sh" \
                     icon.drawing=off \
                     background.color=$BLACK \
                     background.padding_left=0

sketchybar --add item net_logo right \
           --set net_logo icon=\
                     icon.color=$BLACK\
                     label.drawing=off \
                     background.color=$RED

############## FINALIZING THE SETUP ##############
sketchybar --update

echo "sketchybar configuration loaded..."
